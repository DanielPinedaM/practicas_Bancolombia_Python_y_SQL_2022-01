@echo off

set hour=%time:~0,2%
if "%hour:~0,1%" == " " set hour=0%hour:~1,1%
::echo hour=%hour%
set min=%time:~3,2%
if "%min:~0,1%" == " " set min=0%min:~1,1%
::echo min=%min%
set secs=%time:~6,2%
if "%secs:~0,1%" == " " set secs=0%secs:~1,1%
::echo secs=%secs%
set year=%date:~-4%
::echo year=%year%
set month=%date:~-7,2%
if "%month:~0,1%" == " " set month=0%month:~1,1%
::echo month=%month%
::echo %date%
set day=%date:~-10,2%
if "%day:~0,1%" == " " set day=0%day:~1,1%
::echo day=%day%

set Timestamp=%year%%month%%day%_%hour%%min%%secs%

:: Se asigna como disco actual el que corresponde a la ubicacion de este archivo.
%~d0

:: Se asigna como Current Directory la ubicacion de este archivo
cd %~dp0
:: Se crea la carpeta de logs si no existe
if not exist "logs" mkdir logs 
